{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    // Next.js
    "next/core-web-vitals",

    // Base
    "airbnb",
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsx-a11y/recommended",

    // Extended
    "plugin:sonarjs/recommended",
    "plugin:unicorn/recommended",

    // Security
    "plugin:security/recommended",
    "plugin:xss/recommended",

    // Others
    "plugin:tailwindcss/recommended",
    "plugin:jsonc/recommended-with-jsonc",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["import", "@typescript-eslint", "react", "no-secrets", "simple-import-sort", "prettier"],
  "root": true,
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "."
      },
      "node": true
    }
  },
  "rules": {
    // no-secrets plugin
    "no-secrets/no-secrets": "error",

    // simple-import-sort plugin
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",

    // Fix unicorn rules for React
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "kebabCase": true,
          "pascalCase": true
        }
      }
    ],

    // Disable no-duplicate-string rule for server error message
    "sonarjs/no-duplicate-string": ["error", { "ignoreStrings": "Помилка сервера" }],

    // Next.js rules for API routes
    "import/prefer-default-export": "off",

    // Enable support for mjs files
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "json": "always",
        "mjs": "always"
      }
    ],

    // The following rules are disabled due to them being considered unduly restrictive or unhelpful.
    "unicorn/no-array-for-each": "off",
    "unicorn/no-fn-reference-in-iterator": "off",
    "unicorn/no-reduce": "off",
    "unicorn/no-null": "off",
    "unicorn/prefer-number-properties": "off",
    "unicorn/prefer-optional-catch-binding": "off",
    "unicorn/prevent-abbreviations": "off",
    "react/jsx-props-no-spreading": "off",

    // The following rules are disabled due to clashing with other plugins
    "import/order": "off",
    "sort-imports": "off",
    "react/require-default-props": "off"
  }
}
