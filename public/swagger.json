{
  "openapi": "3.0.3",
  "info": {
    "title": "MySkloresurs API 1C",
    "description": "HTTP веб сервіс 1С, для отримання даних з 1С. Деякі роути потребують авторизації API ключем.",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://test.skloresurs.com:37080/upp/hs/myskloresurs",
      "description": "Основний сервер"
    }
  ],
  "tags": [
    {
      "name": "data",
      "description": "Загальні данні з 1С. Не потребують авторизації"
    },
    {
      "name": "manager",
      "description": "Дані менеджера"
    }
  ],
  "paths": {
    "/manager/order/": {
      "get": {
        "tags": ["manager"],
        "summary": "Замовлення",
        "description": "Отримати замовлення менеджера (не більше 250)",
        "operationId": "managerGetOrders",
        "parameters": [
          {
            "in": "query",
            "name": "search",
            "schema": {
              "type": "string"
            },
            "description": "Пошук за ID або контрагентом"
          },
          {
            "in": "query",
            "name": "all",
            "schema": {
              "type": "boolean",
              "enum": [true]
            },
            "description": "Показувати всі замовлення"
          }
        ],
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ManagerOrders"
                }
              }
            }
          },
          "401": {
            "description": "Невірний ID менеджера"
          },
          "403": {
            "description": "Невірний API ключ"
          },
          "500": {
            "description": "Помилка сервера"
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          },
          {
            "Manager": []
          }
        ]
      }
    },
    "/manager/order/{id}": {
      "get": {
        "tags": ["manager"],
        "summary": "Товари",
        "description": "Отримати товари по ID замовлення",
        "operationId": "managerGetOrderGoods",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string",
              "example": "000000"
            },
            "description": "ID замовлення",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ManagerOrderGoods"
                }
              }
            }
          },
          "403": {
            "description": "Невірний API ключ"
          },
          "404": {
            "description": "Замовлення не знайдено"
          },
          "500": {
            "description": "Помилка сервера"
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/data/order-types": {
      "get": {
        "tags": ["data"],
        "summary": "Типи замовлень",
        "description": "Отримати типи замовлень",
        "operationId": "dataGetOrderTypes",
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataOrderTypes"
                }
              }
            }
          },
          "500": {
            "description": "Помилка сервера"
          }
        }
      }
    },
    "/data/specification-types/{id}": {
      "get": {
        "tags": ["data"],
        "summary": "Типи специфікацій",
        "description": "Отримати типи специфікацій",
        "operationId": "dataGetSpecificationTypes",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
              "title": "ID типу замовлення"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSpecificationTypes"
                }
              }
            }
          },
          "500": {
            "description": "Помилка сервера"
          }
        }
      }
    },
    "/data/nomenclatures/{id}": {
      "get": {
        "tags": ["data"],
        "summary": "Список номенклатур",
        "description": "Отримати список номенклатур",
        "operationId": "dataGetNomenclatures",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
              "title": "ID типу Номенклатури"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataNomenclatures"
                }
              }
            }
          },
          "500": {
            "description": "Помилка сервера"
          }
        }
      }
    },
    "/data/operations/{id}": {
      "get": {
        "tags": ["data"],
        "summary": "Список операцій",
        "description": "Отримати список операцій",
        "operationId": "dataGetOperations",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
              "title": "ID типу Специфікації"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataOperations"
                }
              }
            }
          },
          "500": {
            "description": "Помилка сервера"
          }
        }
      }
    },
    "/data/coating-types": {
      "get": {
        "tags": ["data"],
        "summary": "Типи покриття",
        "description": "Отримати типи покриття",
        "operationId": "dataGetCoatingTypes",
        "responses": {
          "200": {
            "description": "Успішно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataCoatings"
                }
              }
            }
          },
          "500": {
            "description": "Помилка сервера"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ManagerOrders": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "000000",
                  "description": "ALFAK замовлення"
                },
                "responsible": {
                  "type": "string",
                  "example": "Дейсун Іван",
                  "description": "Відповідальний"
                },
                "manadger": {
                  "type": "string",
                  "example": "Стець Ярема",
                  "description": "Основний менеджер"
                },
                "agent": {
                  "type": "string",
                  "example": "Гайворонський Людислав Романович",
                  "description": "Контрагент"
                },
                "createdAt": {
                  "type": "string",
                  "example": "2023/10/10 10:10",
                  "description": "Дата створення замовлення"
                },
                "shipmentAt": {
                  "type": "string",
                  "example": "2023/10/10",
                  "description": "Дата відпралення замовлення"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "Принят менеджером",
                    "Снабжение",
                    "Производство",
                    "Утверждено производством",
                    "Есть оптимизация",
                    "Склад частично",
                    "Склад",
                    "Отгружен",
                    "Отклонен",
                    "Произведено (ручной статус)",
                    "Выполнено"
                  ],
                  "description": "Статус замовлення"
                },
                "location": {
                  "type": "string",
                  "example": "Petrenko Ivan Leonidovych Vul. Shevchenka, Bud-17 M. Bila Tserkva Kyivs'Ka Obl. 09117 Ukraine",
                  "description": "Адрес адоставки"
                },
                "locked": {
                  "type": "boolean",
                  "example": true,
                  "description": "Заблоковано для виробництва"
                },
                "finnance": {
                  "type": "object",
                  "nullable": true,
                  "description": "Фінансові показники. Доступні тільки, якщо користувач має право на це.",
                  "properties": {
                    "bill": {
                      "type": "string",
                      "example": "СР000000000",
                      "description": "Рахунок"
                    },
                    "total": {
                      "type": "number",
                      "example": 250000,
                      "description": "Загальна вартість замовлення"
                    },
                    "pay": {
                      "type": "number",
                      "example": 250000,
                      "description": "Сума яка вже оплачена"
                    },
                    "final": {
                      "type": "number",
                      "example": 0,
                      "description": "Кінцевий залишок"
                    },
                    "currency": {
                      "type": "string",
                      "example": "грн.",
                      "description": "Валюта"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "ManagerOrderGoods": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "position": {
                  "type": "number",
                  "example": 1,
                  "description": "Позиція"
                },
                "name": {
                  "type": "string",
                  "example": "Товар",
                  "description": "Повна назва номенклатури"
                },
                "width": {
                  "type": "number",
                  "example": 100,
                  "description": "Ширина"
                },
                "height": {
                  "type": "number",
                  "example": 100,
                  "description": "Висота"
                },
                "amount": {
                  "type": "number",
                  "example": 1,
                  "description": "Кількість"
                },
                "pieces": {
                  "type": "number",
                  "example": 1,
                  "description": "Кількість (шт.)"
                },
                "in": {
                  "type": "number",
                  "example": 1,
                  "description": "Кількість на складі"
                },
                "out": {
                  "type": "number",
                  "example": 1,
                  "description": "Кількість з складу"
                }
              }
            }
          }
        }
      },
      "DataOrderTypes": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string",
                  "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
                  "description": "ID"
                },
                "label": {
                  "type": "string",
                  "example": "Тип замовлення №1",
                  "description": "Назва"
                },
                "max": {
                  "type": "number",
                  "example": 1,
                  "minimum": 1,
                  "maximum": 9,
                  "description": "Максимальна кількість елементів"
                },
                "groupSize": {
                  "type": "number",
                  "example": 1,
                  "minimum": 1,
                  "maximum": 2,
                  "description": "Кі-сть елементів в одній групі"
                }
              }
            }
          }
        }
      },
      "DataSpecificationTypes": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string",
                  "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
                  "description": "ID"
                },
                "label": {
                  "type": "string",
                  "example": "Специфікація №1",
                  "description": "Назва"
                },
                "type": {
                  "type": "string",
                  "example": "glass",
                  "enum": ["glass", "camera", "film"],
                  "description": "Тип специфікації"
                }
              }
            }
          }
        }
      },
      "DataNomenclatures": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string",
                  "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
                  "description": "ID"
                },
                "label": {
                  "type": "string",
                  "example": "Номенклатура",
                  "description": "Назва"
                },
                "thickness": {
                  "type": "number",
                  "example": 8.98,
                  "description": "Товщина"
                }
              }
            }
          }
        }
      },
      "DataOperations": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string",
                  "example": "5f468ecb-4f19-4c51-ace4-10a5d7618207",
                  "description": "ID"
                },
                "label": {
                  "type": "string",
                  "example": "Операція",
                  "description": "Назва"
                }
              }
            }
          }
        }
      },
      "DataCoatings": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string",
                  "example": "1",
                  "description": "ID"
                },
                "label": {
                  "type": "string",
                  "example": "Покриття №1",
                  "description": "Назва"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      },
      "Manager": {
        "type": "apiKey",
        "in": "header",
        "name": "managerid"
      }
    }
  }
}
